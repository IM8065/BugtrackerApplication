@model Bugtracker.Models.ViewModels.DetailsVM


<div class="">
    <div class="container backgroundWhite pt-4">
        <div class="card" style="border:1px solid #000000; ">
            <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Project.Name</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <p class="text-secondary">@Html.Raw(Model.Project.ShortDesc) </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-dark">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1 ">
                        <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-3">
    @if (Model.Project.AssignedTickets.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Created
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.Project.AssignedTickets)
                {
                <tr>
                    <td width="15%">@obj.Title</td>
                    <td width="15%">@obj.TicketStatus</td>
                    <td width="15%">@obj.Created</td>
                    <td class="text-center">
                        <div class="w-75">
                            <a asp-controller="Ticket" asp-route-Id="@obj.Id" asp-action="Details" class="btn btn-primary mx-2">
                                Details
                            </a>
                            <a asp-controller="Ticket" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Ticket" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-primary mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No tickets assigned to this project yet.</p>
    }

</div>
