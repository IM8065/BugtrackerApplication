@model Bugtracker.Models.ApplicationUser

<section class="form-section">
    <div class="form-container">
        <span class="form-title">
            Profile
        </span>

        <div class="form-field">
            <label class="form-label" asp-for="@Model.FirstName"></label>

            <div class="form-control">
                <input class="form-input" asp-for="@Model.FirstName" disabled />
            </div>
        </div>
        <div class="form-field">
            <label class="form-label" asp-for="@Model.LastName"></label>

            <div class="form-control">
                <input class="form-input" asp-for="@Model.LastName" disabled />
            </div>
        </div>

        <div class="form-field">
            <label class="form-label" asp-for="@Model.Email"></label>

            <div class="form-control">
                <input class="form-input" asp-for="@Model.Email" disabled />
            </div>
        </div>

        <div class="form-field is-grouped">
            <div class="form-control">
                <a class="button-custom form-button" asp-action="Update" asp-route-id="@Model.Id">Update</a>
            </div>
        </div>
    </div>
</section>